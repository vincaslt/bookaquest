{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "./src/typings"
      ],
      "@lib/*": [
        "src/lib/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".cache",
    ".vscode"
  ]
}