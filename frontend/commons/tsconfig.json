{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "jsx": "react",
    "target": "es5",
    "rootDir": ".",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "paths": {
      "~*": [
        "./*"
      ]
    }
  },
  "typeRoots": [
    "../node_modules/@types",
    "./commons/typings"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".cache",
    ".vscode"
  ]
}